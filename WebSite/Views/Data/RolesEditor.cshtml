@using WebSite.ViewModels.Roles
@model WebSite.ViewModels.Roles.RolesEditorViewModel

@{
    Layout = null;
}

<div>
    @for (int i = 0; i < Model.Roles.Count; ++i)
    {
        <div class="editor-label">
            @Html.Label(Model.Roles[i].Role.Name)
        </div>
        @Html.CheckBoxFor(model => model.Roles[i].UserInRole)
    }
</div>